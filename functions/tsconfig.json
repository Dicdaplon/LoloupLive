{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "lib",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "sourceMap": true,

    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"]
}
